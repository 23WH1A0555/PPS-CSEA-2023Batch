//no. of vowels in a string
#include<stdio.h>
int count_vowels(char[]);
int main(){
	char str[10];
	printf("enter a string in lower case: ");
	scanf("%s",str);
	int vowel_no=count_vowels(str);
	printf("%d",vowel_no);
	}
int count_vowels(char str[]){
	int i,count=0;
	for(i=0;str[i]!='\0';i++){
		if(str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u')
			count++;
	}
	return count;
}                                                                                                  
	
