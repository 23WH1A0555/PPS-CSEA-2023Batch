#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
            int sum=0,num,rem;
            scanf("%d",&num);
            while(num>9){
                sum=0;
                while(num>0){
                    rem=num%10;
                    sum+=rem;
                    num=num/10;
                }
                num=sum;
            }
            printf("%d\n",num);
    return 0;
}
