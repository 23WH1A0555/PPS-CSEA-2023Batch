/*This program is to find the sum of all the multiples of 3 or 5 below 1000*/
#include <stdio.h>

int main() {
              int range,sum=0;
              printf("give range of numbers:");
              scanf("%d",&range);
              for(int i = 1 ; i < range ; i++){
                            if(i%3==0||i%5==0){
                                sum = sum + i;
                            }
              }
   printf("sum of multiples of 3 or 5 below 1000 = %d",sum);
    return 0;
}
