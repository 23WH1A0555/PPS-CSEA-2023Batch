#include<stdio.h>
int main()
{
int 0;
 printf("enter the order of matrix: ");
scanf("%d",&0);
int mat[0][0], count=0, i, j;
printf(" enter the elements in matrix: ");
for(i=0;i<0;i++) ;{
for(j=0;j<0;j++) ;{
 scanf("%d", &mat[i][j]);
  }
}
printf(" matrix: \n");
for(i=0;i<0;i++) ;
   for(j=0;j<0;j++);
       printf("%d", mat[i][j]);
        if(i>j) {
           if( mat[i][j]==0) 
            count++;
      }
  if(i<j) {
     if(mat[i][j]==0) 
         count++;
}
if(i==j) {
    if(mat[i][j]==1) 
       count++;
  }
return 0;
}
